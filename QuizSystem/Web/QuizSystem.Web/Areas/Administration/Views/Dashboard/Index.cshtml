@model QuizSystem.Web.ViewModels.Administration.Dashboard.IndexViewModel
@{
    this.ViewData["Title"] = "Admin dashboard";
    int i = 1;
}

@{
    if (TempData["Message"] != null)
    {
    <div class="alert alert-success">
        <strong>Success!</strong> Message: @TempData["Message"]
    </div>
    }
}

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Total quenstion</th>
            <th scope="col">Time limit</th>
            <th scope="col">Exam date</th>
            <th scope="col">Status</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var exam in Model.Exams)
        {
            <tr>
                <th scope="row">@i</th>
                <td>@exam.Name</td>
                <td>@exam.CountQuestion</td>
                <td>@exam.TimeLimit</td>
                <td>@exam.StartTime</td>
                <td><button type="button" class="btn btn-success">Active</button></td>
                <td><a class="btn btn-outline-danger" asp-area="Administration" asp-controller="Exams" asp-action="Delete" asp-route-id="@exam.Id">Delete</a></td>
                <hidden @i ++></hidden>
            </tr>
            <hiden @(i++)></hiden>
    }
    </tbody>
</table>
