@model QuizSystem.Web.ViewModels.Administration.Exams.CreateViewModel
@{
    this.ViewData["Title"] = "Admin dashboard";
}

<form method="post" asp-action="Create">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="CountQuestion"></label>
        <input asp-for="CountQuestion" class="form-control" />
        <span asp-validation-for="CountQuestion" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="TimeLimit"></label>
        <input asp-for="TimeLimit" class="form-control" />
        <span asp-validation-for="TimeLimit" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="StartTime"></label>
        <input asp-for="StartTime" class="form-control" />
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>
    <hr />
    <input type="submit" class="btn btn-primary" />
</form>